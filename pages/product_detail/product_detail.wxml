    <view class="productImg">
        <image class="productDetails" src="{{imgUrl}}" binderror="" bindload=""></image>
    </view>
    <view class="productInfo" hover-class="none" hover-stop-propagation="false">
        <view class="productText" hover-class="none" hover-stop-propagation="false">
            <text class="introduction" selectable="false" space="false" decode="false"></text>
        </view>
    </view>
    <view class="detailFooter" hover-class="none" hover-stop-propagation="false">
        <view class="price" hover-class="none" hover-stop-propagation="false">ï¿¥{{price}}</view>
        <button class="addToCart" bindtap="addToCart">Add to Cart</button>
    </view>
</view>