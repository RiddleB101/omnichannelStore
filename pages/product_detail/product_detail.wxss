/* pages/product_detail/product_detail.wxss */
.container {
    width: 100%;
    height: 100%;
    margin: 0px;
    padding: 0px
}

.productImg {
    height: 300rpx;
}

.detailFooter {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 100rpx;
    padding: 0 100rpx 0 80rpx;
    box-sizing: border-box;
    background: #AB956D;
    color: #fff;
}

.detailFooter .price {
    display: inline;
}

.addToCart {
    color: #fff;
    background: #ec5151;
    height: 32px;
    margin: 10rpx auto;
    float: right;
    line-height: 32px;
}